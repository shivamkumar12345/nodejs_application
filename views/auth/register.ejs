<% layout('layout/boilerplate') -%>
<div class="register-form mx-auto" style="width: 350px;" >
    <form action="/register" method="post">
        <h1 class="h3 mb-3 fw-normal text-align-center">Register</h1>

        <div class="form-floating  mb-3">
            <input  name="name" type="text" class="form-control" id="floatingName" placeholder="Enter Name">
            <label for="floatingName">Name</label>
        </div>

        <div class="form-floating  mb-3">
        <input name="email"  type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating  mb-3">
        <input  name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
        </div>

        <div class="checkbox mb-3">
        <label>
            <input name="role" type="checkbox" value="seller"> Do you Want to become Seller
        </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
    
    </form>
</div>